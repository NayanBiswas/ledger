import("//mojo/public/mojo_application.gni")

group("impl") {
  testonly = true

  deps = [
    ":lib",
    ":unittests",
    "//apps/ledger/storage/impl/btree",
    "//apps/ledger/storage/impl/store",
  ]
}

source_set("lib") {
  sources = [
    "commit_impl.cc",
    "commit_impl.h",
    "db.cc",
    "db.h",
    "journal_db_impl.cc",
    "journal_db_impl.h",
    "ledger_storage_impl.cc",
    "ledger_storage_impl.h",
    "object_impl.cc",
    "object_impl.h",
    "page_storage_impl.cc",
    "page_storage_impl.h",
  ]

  deps = [
    "//apps/ledger/glue",
    "//apps/ledger/storage/impl/btree:lib",
    "//apps/ledger/storage/impl/store:lib",
    "//apps/ledger/storage/public",
    "//lib/ftl",
    "//mojo/public/cpp/system",
  ]

  public_deps = [
    "//apps/ledger/convert",
    "//third_party/leveldb",
  ]
}

executable("unittests") {
  output_name = "storage_unittests"

  testonly = true

  sources = [
    "commit_impl_unittest.cc",
    "db_unittest.cc",
    "ledger_storage_unittest.cc",
    "object_impl_unittest.cc",
    "page_storage_unittest.cc",
  ]

  deps = [
    ":lib",
    "//apps/ledger/glue",
    "//apps/ledger/storage/fake:lib",
    "//apps/ledger/storage/impl/store:lib",
    "//apps/ledger/storage/public",
    "//apps/ledger/test",
    "//lib/ftl",
    "//lib/mtl",
    "//third_party/gtest",
  ]
}
