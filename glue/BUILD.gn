source_set("glue") {
  sources = [
    "crypto/base64.cc",
    "crypto/base64.h",
    "crypto/hash.cc",
    "crypto/hash.h",
    "crypto/rand.cc",
    "crypto/rand.h",
  ]

  deps = [
    "//lib/ftl",
    "//third_party/boringssl",
  ]
}

executable("unittests") {
  testonly = true

  output_name = "ledger_glue_unittests"

  sources = [
    "data_pipe/data_pipe_writer_unittest.cc",
  ]

  deps = [
    "//apps/ledger/glue/data_pipe",
    "//apps/ledger/test",
    "//third_party/gtest",
  ]
}
