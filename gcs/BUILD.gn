  ]
}

executable("unittests") {
  output_name = "gcs_unittests"

  testonly = true

  sources = [
    "cloud_storage_impl_unittest.cc",
  ]

  deps = [
    ":gcs",
    "//apps/ledger/fake_network_service",
    "//apps/ledger/test",
    "//lib/ftl",
    "//lib/mtl",
    "//third_party/gtest",
  ]
}
