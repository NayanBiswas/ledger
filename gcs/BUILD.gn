source_set("gcs") {
  sources = [
    "cloud_storage.h",
    "cloud_storage_impl.cc",
    "cloud_storage_impl.h",
  ]

  deps = [
    "//lib/mtl",
    "//mojo/public/cpp/bindings:serialization",
  ]

  public_deps = [
    "//apps/network/interfaces:interfaces_cpp_sources",
