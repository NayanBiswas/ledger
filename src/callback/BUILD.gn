source_set("callback") {
  sources = [
    "auto_cleanable.h",
    "cancellable.cc",
    "cancellable.h",
    "cancellable_helper.cc",
    "cancellable_helper.h",
    "destruction_sentinel.cc",
    "destruction_sentinel.h",
    "waiter.h",
  ]

  deps = [
    "//lib/ftl",
  ]
}

group("tests") {
  testonly = true

  deps = [
    ":unittests",
  ]
}

executable("unittests") {
  testonly = true

  output_name = "ledger_callback_unittests"

  sources = [
    "auto_cleanable_unittest.cc",
    "cancellable_helper_unittest.cc",
    "cancellable_unittest.cc",
    "destruction_sentinel_unittest.cc",
  ]

  deps = [
    ":callback",
    "//apps/ledger/src/test:main",
    "//third_party/gtest",
  ]
}
