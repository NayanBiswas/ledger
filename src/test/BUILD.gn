source_set("test") {
  testonly = true

  sources = [
    "capture.h",
  ]

  public_deps = [
    "//lib/ftl",
  ]
}

# Contains the standard gtest main that runs all tests included in the binary.
source_set("main") {
  testonly = true

  sources = [
    "main.cc",
  ]

  public_deps = [
    ":test",
    "//third_party/gtest",
  ]
}

executable("unittests") {
  output_name = "ledger_test_unittests"

  testonly = true

  sources = [
    "capture_unittest.cc",
  ]

  deps = [
    ":main",
    ":test",
  ]
}
