source_set("gcs") {
  sources = [
    "cloud_storage.h",
    "cloud_storage_impl.cc",
    "cloud_storage_impl.h",
  ]

  deps = [
    "//lib/mtl",
  ]

  public_deps = [
    "//apps/ledger/src/glue/data_pipe",
    "//apps/ledger/src/network",
    "//lib/ftl",
  ]
}

executable("unittests") {
  output_name = "gcs_unittests"

  testonly = true

  sources = [
    "cloud_storage_impl_unittest.cc",
  ]

  deps = [
    ":gcs",
    "//apps/ledger/src/network:fake",
    "//apps/ledger/src/test:main",
    "//lib/ftl",
    "//lib/mtl",
    "//third_party/gtest",
  ]
}
